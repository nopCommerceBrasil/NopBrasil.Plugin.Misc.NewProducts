@{
    Layout = "";
}
@model NopBrasil.Plugin.Misc.NewProducts.Models.ConfigurationModel
@using Nop.Web.Framework;

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                <div>
                    <a href="http://www.nopcommercebrasil.com"><img src="/Plugins/Misc.NewProducts/Content/Images/nopCommerceBrasil.png"></a>
                    <br />
                    <p>
                        Este plugin foi desenvolvido por <a href="http://www.nopcommercebrasil.com">NopCommerce Brasil - http://www.nopcommercebrasil.com</a><br />
                        Em caso de dúvidas ou problemas por favor entre em contato conosco através do email <a href="mailto:nopcommercebrasil@nopcommercebrasil.com" target="_top">nopcommercebrasil@nopcommercebrasil.com</a><br />
                        Este plugin é open-source e seu código-fonte está disponível no <a href="https://github.com/nopCommerceBrasil">GitHub do NopCommerce Brasil</a> no repositório <a href="https://github.com/nopCommerceBrasil/NopBrasil.Plugin.Misc.NewProducts">NopBrasil.Plugin.Misc.NewProducts</a>
                    </p>
                    <br />
                </div>

                  <div class="form-group">
                    <div class="col-md-3">
                        @Html.NopLabelFor(model => model.Disable)
                    </div>
                    <div class="col-md-9">
                        @Html.CheckBoxFor(model => model.Disable)
                        @Html.ValidationMessageFor(model => model.Disable)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        @Html.NopLabelFor(model => model.NumberOfDaysAsNew)
                    </div>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.NumberOfDaysAsNew)
                        @Html.ValidationMessageFor(model => model.NumberOfDaysAsNew)
                    </div>
                </div>
                 
                    <div class="form-group">
                        <div class="col-md-3">
                            &nbsp;
                        </div>
                        <div class="col-md-9">
                            <input type="submit" name="save" class="btn bg-blue" value="@T("Admin.Common.Save")" />
                        </div>
                    </div>

                </div>
        </div>
    </div>
}
